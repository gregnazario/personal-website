{
	"name": "personal-website",
	"version": "0.2.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "tsc --noEmit && vite build",
		"preview": "vite preview",
		"lint": "biome lint .",
		"lint:fix": "biome lint . --write",
		"format": "biome format . --write",
		"format:check": "biome format .",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:debug": "playwright test --debug",
		"generate:icons": "node scripts/generate-icons.mjs",
		"generate:og": "node scripts/generate-og-image.mjs",
		"generate:assets": "node scripts/generate-icons.mjs && node scripts/generate-og-image.mjs",
		"translate": "node scripts/translate.mjs",
		"translate:force": "node scripts/translate.mjs --force",
		"new": "node scripts/new-content.mjs",
		"new:blog": "node scripts/new-content.mjs blog",
		"new:project": "node scripts/new-content.mjs project",
		"prepare": "husky"
	},
	"dependencies": {
		"@tanstack/react-router": "^1.153.2",
		"@tanstack/react-start": "^1.154.0",
		"@tanstack/router-plugin": "^1.153.2",
		"gray-matter": "^4.0.3",
		"openai": "^6.16.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-raw": "^7.0.0",
		"rehype-slug": "^6.0.0",
		"rehype-stringify": "^9.0.4",
		"remark-gfm": "^4.0.1",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.1.2",
		"unified": "^11.0.5",
		"vite-tsconfig-paths": "^6.0.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@netlify/vite-plugin-tanstack-start": "^1.2.7",
		"@playwright/test": "^1.57.0",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.2",
		"@types/node": "^22.19.7",
		"@types/react": "^18.3.27",
		"@types/react-dom": "^18.3.7",
		"@vitejs/plugin-react": "^5.1.2",
		"@vitest/coverage-v8": "^4.0.17",
		"husky": "^9.1.7",
		"jsdom": "^27.4.0",
		"lint-staged": "^16.2.7",
		"sharp": "^0.34.5",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.17"
	},
	"engines": {
		"node": ">=18.18.0"
	},
	"lint-staged": {
		"*.{js,ts,tsx,json,css,md}": [
			"biome check --write --no-errors-on-unmatched"
		]
	}
}
